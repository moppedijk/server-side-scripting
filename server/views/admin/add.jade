extends ../_layout/admin.jade

block content
	.row
		.col-md-8
			form(method='POST' action='/admin/dashboard/add/new/' enctype='multipart/form-data')
				fieldset.form-group
					label(for='name')!= 'Name'
					input.form-control#name(type='text' name='name' placeholder='e.g. Ferrari')
				fieldset.form-group
					label(for='price')!= 'Price'
					input.form-control#price(type='text' name='price' placeholder='e.g. 0 euro')
				fieldset.form-group
					label(for='color')!= 'Color'
					input.form-control#color(type='text' name='color' placeholder='e.g. Red')
				fieldset.form-group
					label(for='image')!= 'Image'
					input.form-control-file#image(type='file' name='image' placeholder='e.g. Red')
					small.text-muted!= 'Upload an image'
				button.btn.btn-primary(type='sumbit')!= 'Add new car'