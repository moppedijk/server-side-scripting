extends ../_layout/admin.jade

block content
	.row
		.col-md-8
			form(method='POST' action='/admin/dashboard/edit/' enctype='multipart/form-data')
				fieldset.form-group
					label(for='name')!= 'Name'
					input.form-control#name(type='text' value!= car.name name='name' placeholder='e.g. Ferrari')
				fieldset.form-group
					label(for='price')!= 'Price'
					input.form-control#price(type='text' value!= car.price name='price' placeholder='e.g. 0 euro')
				fieldset.form-group
					label(for='color')!= 'Color'
					input.form-control#color(type='text' value!= car.color name='color' placeholder='e.g. Red')
				.form-group
					img(src!= '/uploads/' + car.imageSmall)
				fieldset.form-group
					label(for='image')!= 'Image'
					input.form-control-file#image(type='file' name='image' placeholder='e.g. Red')
					small.text-muted!= 'Upload an image'
				input#id(type='hidden' name='id' value!= car._id)
				button.btn.btn-primary(type='sumbit')!= 'Edit car'